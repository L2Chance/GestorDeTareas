@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="fas fa-user-slash me-2"></i>Eliminar Cuenta</h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>Eliminar estos datos eliminará permanentemente tu cuenta y no se podrá recuperar.</strong>
                    </p>
                </div>
                <form id="delete-user" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
                    @if (Model.RequirePassword)
                    {
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña actual" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                    }
                    <button class="w-100 btn btn-danger" type="submit"><i class="fas fa-trash-alt me-1"></i> Eliminar datos y cerrar mi cuenta</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
